@model BookModel

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Gallary.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" : "")"></li>
                    }
                    
                    @*<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>*@

                    </ol>

                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Gallary.Count(); i++)
                        {
                            <div class="@(i == 0 ? "carousel-item active" : "carousel-item")" >
                                <img class="d-block w-100" src="@Model.Gallary[i].URL" alt="@Model.Gallary[i].Name">
                            </div>
                        }

                        @*<div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/Book/book1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/Book/book2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/Book/book3.jpg" alt="Third slide">
                        </div>*@

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <h1>@Model.Title</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-primary">
                        <span class="badge">By:</span>
                        <span class="text-monospace">@Model.Author</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="description">
                            @Model.Description
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-primary">Read Now</button>
                    </div>
                </div>

                <hr />

                <ul class="list-group">
                    <li class="list-group-item"><span class="font-weight-bold">Category - </span>@Model.Category</li>
                    <li class="list-group-item"><span class="font-weight-bold">Pages -</span>@Model.Pages</li>
                    <li class="list-group-item"><span class="font-weight-bold">Language -</span>@Model.Language</li>
                </ul>
            </div>
        </div>

        <hr />
        <div class="py-5 bg-light">
            <h3 class="h3">Similar books</h3>
            <div class="row">
                @for (int i = 0; i < 5; i++)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="/images/Book.jpg" class="img-thumbnail" />
                            <div class="card-body">
                                <h3 class="card-title">Title</h3>
                                <p class="card-text">This is the description for Java Book hello hello hello hello</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Book" asp-action="GetBook" asp-route-Id="Id">View Details</a>
                                    </div>
                                    <small class="text-muted">Author</small>
                                </div>

                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>