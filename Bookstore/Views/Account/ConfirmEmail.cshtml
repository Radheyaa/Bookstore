@model EmailConfirmModel

@{
    ViewData["Title"] = "ConfirmEmail";
}



<div class="container">
        <div class="row text-center">
        <div class="col-md-4 " >
            @if (Model?.EmailVerified == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>Your email has been verified successfully</p>
                </div>
            }
            else
            {
                if (Model?.EmailSent == true)
                {
                    <p> Email Sent to your email address </p>
                }
                else
                {
                    <p> Click on the eamil that we sent you </p>

                    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                    <form asp-action="ConfirmEmail" asp-controller="Account">
                        <input type="hidden" asp-for="email" />

                        <p>Did you not get the email </p>

                        <div class="form-group">
                            <input type="submit" value="Resend Confirmation email" class="btn btn-primary" />

                        </div>

                    </form>

                }


            }
        </div>
    </div>
</div>